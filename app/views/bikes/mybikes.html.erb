
<div class="container mt-4">
  <h1 class="mt-3">My Bikes</h1>
  <% if @bikes.empty? %>
  <p>You don't have any Bikes on BikeShare, You can Get Started <%= link_to new_bike_path do %><h2 id="link"><i class="fa-solid fa-plus"></i></h2></p>
  <% end %>
  <% else %>
  <div class="cards-grid mt-5">
    <% @bikes.each do |bike| %>
      <div class="card p-3 m-3 shadow round" style="width: 27rem;">
        <%= cl_image_tag bike.photos.first.key, height: 250, crop: :fill %>
          <div class="m-2">
          <h4 class="mb-3"><strong><%= bike.title %></strong></h5>
          <h6 class="mb-3"><i class="fa-solid fa-location-dot"></i>  Address: <%= bike.address %></h6>
          <h5 class="mb-4"><em> Â£<%= bike.price %></em></h5>
          <%= button_to "Delete Bike", bike_path(bike), class: "btn btn-primary mb-3", method: :delete %>
          <%= link_to "Edit Bike", edit_bike_path(bike), class: "btn btn-primary"  %>
        </div>
      </div>
      <% end %>
      </div>
  <% end %>
    <%= link_to "Go back to bikes", root_path, class: "btn btn-secondary" %>
</div>
