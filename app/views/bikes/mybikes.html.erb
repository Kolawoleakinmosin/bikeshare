
<div class="container">
  <h1>My Bikes</h1>
  <div class="card p-3 m-3 shadow round" style="width: 27rem;">
    <% @bikes.each do |bike| %>
    <%= cl_image_tag bike.photos.first.key, width: 400, height: 300, crop: :fill %>
    <div class="m-2">
      <h5><strong><%= bike.title %></strong></h5>
      <h6>Location: <%= bike.location %></h6>
      <p><em>Price: <%= bike.price %>â‚¬</em></p>
      <%= link_to "Go to bike", bike_path(bike), class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
  <%= link_to "Go back to bikes", root_path, class: "btn btn-primary" %>
</div>
