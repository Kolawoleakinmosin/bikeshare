<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.giant-bicycles.com/Images/PageBuilder/PageElements/Banner_E-BikeProducts_MMT_WebsiteDesign_Brand_1595881505.jpg);">
  <div class="container">
    <h1>My bikes</h1>
    <p>Get moving with Bikeshare: Affordable and convenient bike rentals for every traveler!</p>
    <% if user_signed_in? %>
      <div class="btn-wrapper d-none">
      <a class="btn btn-flat" href="<%= new_user_session_path %>">Login</a>
      <span class="btn-subtext">No account? Sign up!</span>
    <% else %>
      <div class="btn-wrapper">
      <a class="btn btn-flat" href="<%= new_user_session_path %>">Login</a>
      <span class="btn-subtext">No account? Sign up!</span>
    <% end %>
    </div>
  </div>
</div>
<div class="container mt-4">
  <h1 class="mt-3">My Bikes</h1>
  <% if @bikes.empty? %>
  <p>You don't have any Bikes on BikeShare, You can Get Started <%= link_to new_bike_path do %><h2 id="link"><i class="fa-solid fa-plus"></i></h2></p>
  <% end %>
  <% else %>
  <%= link_to root_path do %>
    <h2 class="p-1"><i class="fa-solid fa-left-long" id="plus"></i></h2>
  <% end %>
  <div class="cards-grid mt-2
  ">
    <% @bikes.each do |bike| %>
      <div class="card p-3 m-3 shadow round" style="width: 27rem;">
        <%= cl_image_tag bike.photos.first.key, height: 250, crop: :fill %>
          <div class="m-2">
          <h5 class="mb-3"><%= bike.title %></h5>
          <h6 class="mb-3"><i class="fa-solid fa-location-dot"></i>  Address: <%= bike.address %></h6>
          <h5 class="mb-4"><em> Â£<%= bike.price %></em></h5>
          <%= button_to "Delete", bike_path(bike), class: "btn btn-primary mb-3", method: :delete %>
          <%= link_to "Edit", edit_bike_path(bike), class: "btn btn-primary"  %>
        </div>
      </div>
      </div>
  <% end %>
    <%= link_to "Go back to bikes", root_path, class: "btn btn-secondary" %>

    <% end %>
  </div>
</div>
