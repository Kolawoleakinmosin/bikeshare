  <h1 class="mt-3">My Bikes</h1>
  <div class="cards-grid mt-5">
    <% @bikes.each do |bike| %>
      <div class="card p-3 m-3 shadow round" style="width: 27rem;">
        <%= cl_image_tag bike.photos.first.key, width: 400, height: 300, crop: :fill %>
          <div class="m-2">
          <h4 class="mb-3"><strong><%= bike.title %></strong></h5>
          <h6 class="mb-3">üìç Location: <%= bike.location %></h6>
          <p><em>Price: <%= bike.price %>‚Ç¨</em></p>
          <%= link_to "Go to bike", bike_path(bike), class: "btn btn-primary" %>
        </div>

      </div>
      <% end %>
      </div>
    <%= link_to "Go back to bikes", root_path, class: "btn btn-secondary" %>
</div>
