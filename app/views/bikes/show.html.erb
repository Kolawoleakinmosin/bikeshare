<div class="bg-white m-3">
  <div class="container p-3 ">
    <div class="row">
      <div class="col-md-6">
        <h3>Hi <%= current_user.first_name %>, you have selected <%= @bike.title  %></h3>
        <p>Please add your dates and confirm all details to proceed with your booking</p>
      </div>
    </div>
  </div>
</div>



<div class="container w-100">
  <div class="row">
    <div class="col-8 d-flex justify-content-center">
      <div class="card shadow m-2 shadow round p-2" style="width: 23rem;">
          <img class="card-img-top" src="<%= cl_image_path @bike.photos.first.key, height: 300, crop: :fill %>" alt="Card image cap">
          <div class="card-body">
          <h5 class="card-title"><%= @bike.title %></h5>
          <p class="card-text">
            <p>Location: <%= @bike.location%></p>
            <% if @bike.availability%>
              <p>Available</p>
              <% else %>
              <p>Not Available</p>
              <% end %>

              <% if current_user %>
                <% if policy(@bike).destroy? %>
                <%= button_to "Delete Bike", bike_path(@bike), class: "btn btn-primary mb-3", method: :delete %>
                <% end %>
                <% if policy(@bike).edit? %>
                  <%= link_to "Edit Bike", edit_bike_path(@bike), class: "btn btn-primary"  %>
                <% end %>
                <% end %>
          </div>
      </div>
    </div>
    <div class="col-4">
      <h3>Book this Bike</h3>
      <div class="col-m-4 round shadow">
        <div class="bg-white border p-3 sticky-top round shadow"><% if user_signed_in? %>
          <p><%= link_to 'Book', new_bike_booking_path(@bike), class: "btn btn-primary w-100" %></p>
          <% else %>
          <p><%= link_to 'Sign-Up', new_user_registration_path, class: "btn btn-primary w-100" %></p>
          <% end %>
          <div class="d-flex justify-content-between mt-3">
              <p><%= @bike.title %></p>
              <p><%= @bike.price %>â‚¬</p>
            </div>
        </div>
      </div>
    </div>
    </div>
      <%= link_to "Back to Bikes", root_path, class: "btn btn-primary" %>
  </div>
</div>
